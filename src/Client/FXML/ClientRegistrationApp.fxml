<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane prefHeight="379.0" prefWidth="201.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.ClientRegistrationApp">
   <children>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="Login" />
            <TextField fx:id="tfLogin" alignment="CENTER" promptText="login" />
            <Label text="Nick name" />
            <TextField fx:id="tfNickName" alignment="CENTER" promptText="nick name" />
            <Label text="password" />
            <TextField fx:id="tfPassword" alignment="CENTER" promptText="password" />
            <Label text="confirm password" />
            <TextField fx:id="tfConfirmPassword" alignment="CENTER" promptText="confirm password" />
            <HBox alignment="CENTER" prefHeight="65.0" prefWidth="201.0" spacing="30.0">
               <children>
                  <Button fx:id="btnCreateUser" mnemonicParsing="false" onAction="#createUser" prefHeight="40.0" prefWidth="70.0" text="Создать" />
                  <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#cancelRegistration" prefHeight="40.0" prefWidth="70.0" text="Отенить" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
